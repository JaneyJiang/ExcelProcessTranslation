<Window x:Class="SortTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortTool"
        mc:Ignorable="d"
        Title="ChineseSort" Height="230" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Button Content="Sort Part" Grid.Column="0" Width="200" Height="200" Click="OpenSortWindow"/>
        <Button Content="Merge Part" Grid.Column="1" Width="200" Height="200" Click="OpenMergeWindow"/>

    </Grid>
</Window>
